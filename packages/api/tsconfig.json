{
  "compilerOptions": {
    "lib": ["es2017"],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "alwaysStrict": false,
    "sourceMap": true,
    "sourceRoot": "./src/",
    "noUnusedLocals": true
  },
  "parserOptions": {},
  "include": ["src/**/*.ts"],
  "exclude": ["./node_modules/**/*", "./*.js"]
}
