{
  "compilerOptions": {
    "lib": ["es2015"],
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "alwaysStrict": false,
    "inlineSourceMap": true,
    "sourceRoot": "./src/",
  },
  "parserOptions": {
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./*.js"
  ]
}